<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp" />

            <ImageView
                android:id="@+id/view2"
                android:layout_width="410dp"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@drawable/header_nabi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/bg_home_rad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view13"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/home_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="158dp"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@+id/view13">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_nabi"
                    android:textSize="18dp"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/TvUsia"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usia:" />

                    <TextView
                        android:id="@+id/TvIsiUsia"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="isi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:textSize="12dp"
                        android:id="@+id/TvTahunKelahiran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tahun Kelahiran:" />

                    <TextView
                        android:textSize="12dp"
                        android:id="@+id/TvIsiTahunKelahiran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="isi" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintHorizontal_bias="0.413"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:foreground="@drawable/ic_volume_up_black_24dp"
                    android:foregroundGravity="center">

                    <Button
                        android:id="@+id/StartButton2x3"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/tombol_bulat"
                        android:gravity="center_vertical" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/ic_bookmark"
                    android:foregroundGravity="center">

                    <Button
                        android:id="@+id/StartButton2x2"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/tombol_bulat"
                        android:gravity="center_vertical"
                        android:shadowColor="#000000" />
                </FrameLayout>


            </LinearLayout>

            <!--            <WebView-->
            <!--                android:id="@+id/WvDetail"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"-->
            <!--                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/linearLayout"-->
            <!--                tools:ignore="WebViewLayout" />-->

            <TextView
                android:id="@+id/TvDetail"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="tor nec justo bibendum lacinia. In hac habitasse platea dictumst. Curabitur rhoncus quam pretium, ultricies felis sed, auctor enim. Donec vel rhoncus turpis, nec ultricies justo. Aenean lobortis diam id rhoncus dapibus. Nullam nec dolor in orci dictum egestas. Praesent ac purus ut ex bibendum pharetra. Duis lacinia urna quis ipsum vestibulum, et hendrerit velit elementum."
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <Button
                android:id="@+id/button_bagikan"
                android:layout_width="74dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner"
                android:text="Bagikan"
                android:textColor="#ffffff"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@+id/TvDetail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:onClick="undoButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="Kisah Lainnya"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@+id/button_bagikan" />

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">


                <ImageView
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        tools:src="@tools:sample/avatars"/>

                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        tools:src="@tools:sample/avatars"/>

                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        tools:src="@tools:sample/avatars"/>

                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        tools:src="@tools:sample/avatars"/>
                </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>